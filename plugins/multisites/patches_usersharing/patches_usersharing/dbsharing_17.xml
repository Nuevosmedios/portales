<?xml version="1.0" encoding="utf-8"?>
<form>
	<params>
		<param name="dbsh_UserSharing" type="radio" default="none" 
		                               label="TEMPLATE_VIEW_EDT_SHR_USERSHARING" 
		                               description="TEMPLATE_VIEW_EDT_SHR_USERSHARING_DESC" 
		                               icon="dbsharing.gif#6" >
				<option value="JoomlaNoACL" description="Share the Joomla users except the Access Control Level">Share the joomla users except their ACL<tables>
                  <table name="#__users"        description="Joomla users" />
                  <table name="#__user_%"       description="Joomla user" />
                  <table name="#__session" />
                  <table name="#__usergroups"   description="Joomla user groups" />
                  <table name="#__usergroup_%"  description="Joomla user groups rules" />
                  <table name="#__viewlevels%"  description="User Access Level" />
                  <tableexcluded name="#__user_usergroup_map" description="Exclude the User Group association" />
            </tables></option>
				<option value="JoomlaFilterSite" description="Share the Joomla users except the Access Control Level and also filter them on Site ID">Share the users filtered on Site ID and exclude the ACL<tables>
                  <table      name="#__multisites_users" description="Multisites ID and users association" >
                     <queries if="$test = (empty( $template) || empty( $template->adminUserID));">
                        <query>INSERT INTO #__multisites_users SELECT id, '{site_id}' FROM {fromPrefix}users as u LEFT JOIN {fromPrefix}user_usergroup_map as grp ON grp.user_id=u.id WHERE group_id=8</query>
                     </queries>
                     <queries if="$test = (!empty( $template) &amp;&amp; !empty( $template->adminUserID));">
                        <query>INSERT INTO #__multisites_users SELECT id, '{site_id}' FROM {fromPrefix}users WHERE id='{adminUserID}'</query>
                     </queries>
                  </table>
                  <table name="#__users"        description="Joomla users" />
                  <table name="#__user_%"       description="Joomla user" />
                  <table name="#__session" />
                  <table name="#__usergroups"   description="Joomla user groups" />
                  <table name="#__usergroup_%"  description="Joomla user groups rules" />
                  <table name="#__viewlevels%"  description="User Access Level" />
                  <tableexcluded name="#__user_usergroup_map" description="Exclude the User Group association" />
                  <tablewhere    name="#__users" where="WHERE id IN (SELECT user_id FROM #__multisites_users WHERE site_id='{site_id}')"  />
            </tables></option>
		</param>
		<param name="dbsh_MSUserSite" type="checkbox" 
		                      condition="{root}/administrator/components/com_multisitesusersite"
                            icon="dbsharing.gif#30"
		                      label="Multisites User Site" description="Share all the User Site ID associations" >
				<tables>
                  <table      name="#__multisites_users" description="Multisites ID and users association" >
                     <queries if="$test = (empty( $template) || empty( $template->adminUserID));">
                        <query>INSERT INTO #__multisites_users SELECT id, '{site_id}' FROM {fromPrefix}users as u LEFT JOIN {fromPrefix}user_usergroup_map as grp ON grp.user_id=u.id WHERE group_id=8</query>
                     </queries>
                     <queries if="$test = (!empty( $template) &amp;&amp; !empty( $template->adminUserID));">
                        <query>INSERT INTO #__multisites_users SELECT id, '{site_id}' FROM {fromPrefix}users WHERE id='{adminUserID}'</query>
                     </queries>
                  </table>
				</tables>
		</param>
		<param name="dbsh_PlgMSUserSite" type="checkbox" 
		                      condition="{root}/plugins/system/multisitesusersite"
                            icon="dbsharing.gif#30"
		                      label="Multisites User Site plugin" description="Share all the Multisites ID attached to the created user tables" >
				<tables>
                  <table name="#__users"        description="Joomla users" />
                  <table name="#__user_%"       description="Joomla user" />
                  <table name="#__usergroups"   description="Joomla user groups" />
                  <table name="#__usergroup_%"  description="Joomla user groups rules" />
                  <table name="#__session" />
                  <table name="#__viewlevels%"  description="User Access Level" />
                  <table name="#__multisites_%" description="All the User Multisites ID tables" />
				</tables>
		</param>
	</params>
</form>
