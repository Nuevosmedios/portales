<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="user" method="upgrade">
	<name>plg_user_partialusersharing</name>
	<author>Edwin2Win sprlu</author>
	<creationDate>14-mar-2013</creationDate>
	<copyright>Copyright 2011-2013 Edwin2Win sprlu - all right reserved</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>info@jms2win.com</authorEmail>
	<authorUrl>www.jms2win.com</authorUrl>
	<version>1.2.00</version>
	<description>PLG_USER_PARTIALUSERSHARING_XML_DESCRIPTION</description>
	<files>
		<filename plugin="partialusersharing">partialusersharing.php</filename>
	</files>

	<config>
		<fields name="params">

			<fieldset name="basic"  addfieldpath="/administrator/components/com_multisites/elements">
				<field name="site_ids" type="site"  
					description="Select the website(s) in which the new users can have access. Several sites can be selected."
					label="sites"
					multiple="multiple"
					size="5"
					withSharedUserOnly="true"
				/>
			</fieldset>

		</fields>
	</config>

	<languages folder="admin/language">
		<language tag="en-GB">en-GB/en-GB.plg_user_partialusersharing.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_user_partialusersharing.sys.ini</language>
	</languages>
</extension>
